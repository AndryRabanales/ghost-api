generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Creator {
  id         String    @id @default(cuid())   // dashboardId (secreto)
  publicId   String    @unique                // link p√∫blico para an√≥nimos
  name       String?                          // nombre opcional del creador
  createdAt  DateTime  @default(now())
  messages   Message[]
}

model Message {
  id        String   @id @default(cuid())
  creatorId String?                          // opcional para mensajes viejos
  content   String
  alias     String?
  createdAt DateTime @default(now())
  status    Status   @default(PENDING)
  seen      Boolean  @default(false)          // üëà nuevo campo para ‚Äúbloqueado/desbloqueado‚Äù

  creator   Creator?  @relation(fields: [creatorId], references: [id]) // relaci√≥n opcional
}

enum Status {
  PENDING
  FULFILLED
  NOT_FULFILLED
}
